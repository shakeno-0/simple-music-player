<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgd"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/btn_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:src="@mipmap/return_img" />




        <TextView
            android:id="@+id/music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/no_pic"
            android:ellipsize="end"
            android:lines="1"
            android:text="123"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/music_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456"
            android:textSize="16sp"
            android:layout_below="@id/music_name"
            android:layout_alignLeft="@id/music_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:lines="1"
            android:ellipsize="end"/>


        <ImageView
            android:id="@+id/musicPicture"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_width="300dp"
            android:layout_height="300dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_cur_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pre"
                android:layout_marginRight="16dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/icon_last" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/icon_pause" />

            <ImageView
                android:id="@+id/iv_next"
                android:layout_marginLeft="16dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/icon_next" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

